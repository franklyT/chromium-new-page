    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "angular": true,

        "select": "writable",
        "selectAll": "writable",
        "onDOMLoad": "writable",
        "randRange": "writable",
        "giveUsApples": "writable",
        "imageBay": "writable",
        "myBg": "writable",
        "vanillaBg": "writable",
        "cowBg": "writable",
        "tabbyBg": "writable",
        "callBackground": "writable",
        "catchFourZeroFour": "writable",
